<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Classifier Viewer</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.4;
            margin: 0;
            padding: 0;
            background: #f3f2f1;
            color: #323130;
        }
        .container {
            max-width: 1400px;
            margin: 0 auto;
            background: #ffffff;
            min-height: 100vh;
            border-left: 1px solid #edebe9;
            border-right: 1px solid #edebe9;
        }
        .header {
            padding: 16px 24px;
            border-bottom: 1px solid #edebe9;
            background: #faf9f8;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .header h1 {
            margin: 0;
            color: #323130;
            font-size: 20px;
            font-weight: 600;
        }
        .content {
            padding: 0;
        }
        .email-list {
            list-style: none;
            padding: 0;
            margin: 0;
            border-top: 1px solid #edebe9;
        }
        .email-item {
            border-bottom: 1px solid #edebe9;
            padding: 12px 24px;
            background: #ffffff;
            cursor: pointer;
            transition: background-color 0.15s ease;
            position: relative;
        }
        .email-item:hover {
            background: #f8f8f8;
        }
        .email-item.unread {
            background: #faf9f8;
        }
        .email-item.unread:hover {
            background: #f3f2f1;
        }
        .email-sender {
            font-weight: 600;
            color: #106ebe;
            margin-bottom: 2px;
            font-size: 14px;
        }
        .email-subject {
            font-size: 14px;
            color: #323130;
            margin-bottom: 4px;
            font-weight: 600;
        }
        .email-preview {
            color: #605e5c;
            font-size: 13px;
            margin-bottom: 8px;
            line-height: 1.3;
        }
        .email-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 12px;
            color: #8a8886;
        }
        .email-time {
            color: #8a8886;
            font-size: 12px;
        }
        .flag-reason {
            background: #d13438;
            color: white;
            padding: 2px 6px;
            border-radius: 2px;
            font-size: 10px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.3px;
        }
        .responded {
            background: #107c10;
            color: white;
            padding: 2px 6px;
            border-radius: 2px;
            font-size: 10px;
            font-weight: 600;
        }
        .not-responded {
            background: #ff8c00;
            color: white;
            padding: 2px 6px;
            border-radius: 2px;
            font-size: 10px;
            font-weight: 600;
        }
        .action-buttons {
            display: flex;
            gap: 8px;
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px solid #edebe9;
        }
        .btn {
            padding: 6px 12px;
            border: 1px solid #8a8886;
            background: #ffffff;
            color: #323130;
            border-radius: 2px;
            cursor: pointer;
            font-size: 12px;
            font-weight: 600;
            transition: all 0.15s ease;
        }
        .btn:hover {
            background: #f3f2f1;
        }
        .btn-primary {
            background: #0078d4;
            border-color: #0078d4;
            color: #ffffff;
        }
        .btn-primary:hover {
            background: #106ebe;
            border-color: #106ebe;
        }
    </style>
    <script>
        function generateResponse(messageId) {
            const btn = event.target;
            btn.disabled = true;
            btn.textContent = 'â³ Generating...';
            
            fetch(`/api/generate-response/${messageId}`, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showResponseModal(messageId, data.response);
                    } else {
                        alert('Error generating response: ' + (data.error || 'Unknown error'));
                    }
                })
                .finally(() => {
                    btn.disabled = false;
                    btn.textContent = 'ðŸ“ Generate Response';
                });
        }
        
        function markAsHandled(messageId) {
            if (confirm('Mark this email as handled?')) {
                fetch(`/api/mark-handled/${messageId}`, { method: 'POST' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert('Error marking as handled');
                        }
                    });
            }
        }
        
        function showResponseModal(messageId, generatedResponse) {
            const modal = document.createElement('div');
            modal.style.cssText = `
                position: fixed; top: 0; left: 0; right: 0; bottom: 0; 
                background: rgba(0,0,0,0.5); z-index: 1000; display: flex; 
                align-items: center; justify-content: center;
            `;
            
            modal.innerHTML = `
                <div style="background: white; padding: 24px; border-radius: 8px; width: 90%; max-width: 600px; max-height: 80%; overflow-y: auto;">
                    <h3 style="margin: 0 0 16px 0;">Generated Response</h3>
                    <textarea id="response-text" style="width: 100%; height: 200px; padding: 12px; border: 1px solid #ccc; border-radius: 4px; font-family: inherit; resize: vertical;">${generatedResponse}</textarea>
                    <div style="margin-top: 16px; display: flex; gap: 8px; justify-content: flex-end;">
                        <button onclick="this.closest('.modal').remove()" style="padding: 8px 16px; border: 1px solid #ccc; background: white; border-radius: 4px; cursor: pointer;">Cancel</button>
                        <button onclick="sendResponse('${messageId}')" style="padding: 8px 16px; border: none; background: #0078d4; color: white; border-radius: 4px; cursor: pointer;">Send Response</button>
                    </div>
                </div>
            `;
            
            modal.classList.add('modal');
            document.body.appendChild(modal);
        }
        
        function sendResponse(messageId) {
            const responseText = document.getElementById('response-text').value;
            const modal = document.querySelector('.modal');
            
            if (!responseText.trim()) {
                alert('Please enter a response');
                return;
            }
            
            fetch('/api/send-response', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    message_id: messageId,
                    response_text: responseText,
                    subject: 'Re: Customer Inquiry'
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    modal.remove();
                    location.reload();
                    alert('Response sent successfully!');
                } else {
                    alert('Error sending response: ' + (data.error || 'Unknown error'));
                }
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>ðŸš© Flagged Emails</h1>
        </div>
        <div class="content">
            <%= yield %>
        </div>
    </div>
</body>
</html>